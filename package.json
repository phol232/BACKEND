{
  "name": "microfinance-backend",
  "version": "1.0.0",
  "description": "Backend API para sistema de microfinanzas con Fastify",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "vercel-build": "npm run build",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "seed:products": "tsx scripts/seed-products.ts",
    "seed:test": "tsx scripts/seed-test-data.ts",
    "migrate:products": "tsx scripts/migrate-add-products.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "microfinance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@getbrevo/brevo": "^2.0.0",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "stripe": "^17.3.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
